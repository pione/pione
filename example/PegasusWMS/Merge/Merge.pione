.@ PackageName :: "PegasusWMS-Merge"

Rule Main
  output 'binaries.txt'
Flow
  rule List
  rule Join
End

Rule List
  output 'bin_{$INDEX}.txt'
  param $INDEX := 0.upto(2)
  param $DIRS := ("/bin" | "/usr/bin" | "/usr/local/bin").all
Action
  ls -l {$DIRS[$INDEX+1]} > {$O[1]}
End

Rule Join
  input 'bin_*.txt'.all
  output 'binaries.txt'
Action
  cat {$I[1]} > {$O[1]}
End