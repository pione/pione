Rule NoOutputConditions
  input '*'
End

Rule A2B
  input '*.a'
  output '*.b'
Action
  cat {$I[1]} > {$O[1]}
End

Rule A2Null
  input '*.a'
  output null
End

Rule RemoveA
  input '*.a'
  output '*.a'.remove
End

Rule RemoveAB
  input '*.a'
  input '*.b'
  output '*.a'.remove
  output '*.b'.remove
End

Rule TouchA
  input '*.a'
  output '*.a'.touch
End

Rule NeglectOutput
  input '*.a'
  output '*.b'.neglect
Action
  echo {$I[1]} > {$O[1]}
End
